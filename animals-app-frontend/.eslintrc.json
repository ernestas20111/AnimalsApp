{
	"plugins": ["import"],
	"extends": [
		"react-app",
		"eslint:recommended",
		"plugin:react/recommended"
	],
	"parserOptions": {
		"ecmaVersion": 2020,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"env": {
		"browser": true,
		"jest": true,
		"es6": true
	},
	"root": true,
    "rules": {
		"react/jsx-pascal-case": [
			"error", 
			{ 
				"allowAllCaps": true
			}
		],
		"react/forbid-prop-types": [
			"warn", 
			{ 
				"forbid": ["any", "array", "object"], 
				"checkContextTypes": true, 
				"checkChildContextTypes": true
			}
		],
		// "react/jsx-filename-extension": ["error", { "allow": "as-needed" }],
		"react/no-multi-comp": [ 
			"error", 
			{ 
				"ignoreStateless": true 
			}
		],
		"no-console": "warn",
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "prefer-const": [
            "error"
        ],
        "no-const-assign": [
            "error"
        ],
        "no-var": [
            "error"
        ],
        "object-shorthand": [
            "error", 
            "always"
		],
		"no-new-object": [
			"error"
		],
		"no-unused-vars": [
			"warn"
		],
		"no-array-constructor": "error",
		"prefer-destructuring": "warn",
		"template-curly-spacing": ["error", "never"],
		"prefer-template": "error",
		"no-eval": "error",
		"no-useless-escape": "error"
    }
}
